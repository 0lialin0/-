<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/main_toop"
        layout="@layout/toolbar_other" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#b2b2b2" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:fillViewport="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:orientation="vertical">

            <TextView
                style="@style/title_bg"
                android:text="@string/green_car_info" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_car_num" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_car_num"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />

                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_car_type" />

                    <RelativeLayout
                        android:id="@+id/rl_car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_car_type"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_factory_type" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_factory_type"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />

                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_capacity" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_capacity"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />

                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_axleCount" />

                    <RelativeLayout
                        android:id="@+id/rl_axleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_axleCount"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_tonnage" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_tonnage"
                            style="@style/electron_ed_content"
                            android:numeric="decimal" />

                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />


            </LinearLayout>


            <TextView
                style="@style/title_bg"
                android:text="@string/green_jianyan_info" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_reportOrgID" />

                    <RelativeLayout
                        android:id="@+id/rl_reportOrgID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_reportOrgID"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_check_time" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_check_time"
                            style="@style/electron_ed_content" />

                    </LinearLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_entrance" />

                    <RelativeLayout
                        android:id="@+id/rl_InStationID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_InStationID"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_come_dao" />

                    <RelativeLayout
                        android:id="@+id/rl_LaneID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_LaneID"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />


                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_OprName" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_OprName"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />

                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />


                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_class" />

                    <LinearLayout
                        android:id="@+id/ll_member_interest"
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_Shiftman"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />


                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_type" />

                    <RelativeLayout
                        android:id="@+id/rl_green_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            android:id="@+id/ll_member_family"
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_green_type"
                                style="@style/electron_ed_content"
                                android:hint="@string/please_input" />


                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_jianmian" />

                    <LinearLayout
                        android:id="@+id/ll_member_address"
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/rg_IsEnjoy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_IsEnjoy_yes"
                                style="@style/radio_rad_bg"
                                android:text="@string/green_jianmian_yes" />

                            <RadioButton
                                android:id="@+id/rb_IsEnjoy_no"
                                style="@style/radio_rad_bg"
                                android:layout_marginLeft="@dimen/x50"
                                android:checked="true"
                                android:text="@string/green_jianmian_no" />
                        </RadioGroup>


                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_FreeMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View style="@style/view_line" />

                    <RelativeLayout
                        style="@style/electron_outer_linearLayout"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/electron_tv_title"
                            android:text="@string/green_FreeMoney" />

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_FreeMoney"
                                style="@style/electron_ed_content"
                                android:numeric="decimal" />


                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_EscapeMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View style="@style/view_line" />

                    <RelativeLayout
                        style="@style/electron_outer_linearLayout"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/electron_tv_title"
                            android:text="@string/green_EscapeMoney" />

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_EscapeMoney"
                                style="@style/electron_ed_content"
                                android:numeric="decimal" />


                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_goods_name" />

                    <LinearLayout
                        android:id="@+id/ll_GoodsName"
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_GoodsName"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />


                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />


                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_goods_name_hui" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_MixGoodsName"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />


                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_remark" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_Remark"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />


                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginTop="@dimen/y10"
                android:orientation="vertical">

                <TextView
                    style="@style/title_bg"
                    android:text="@string/green_photo" />

                <cn.wtkj.charge_inspect.views.custom.MyPhotos
                    android:id="@+id/myphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:padding="5dp"></cn.wtkj.charge_inspect.views.custom.MyPhotos>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comit_button"
                    style="@style/button_layout"
                    android:background="@drawable/selector_psersoal_bt_bg"
                    android:text="提交"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
