<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_house_bg"
    android:clickable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ve_line">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x29"
                android:layout_marginTop="@dimen/y30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/active_title"
                    style="@style/list_title"
                    android:layout_marginBottom="@dimen/y28"
                    android:text="aaaaaaa" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_sub_title"
                        android:text="@string/increment_entrance" />

                    <TextView
                        android:id="@+id/active_entrance"
                        style="@style/list_sub_title"
                        android:layout_below="@+id/active_title"
                        android:layout_marginBottom="@dimen/y33"
                        android:text="bbbb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_sub_title"
                        android:text="@string/increment_entrance_type" />

                    <TextView
                        android:id="@+id/active_entrance_type"
                        style="@style/list_sub_title"
                        android:layout_below="@+id/active_title"
                        android:layout_marginBottom="@dimen/y33"
                        android:text="bbbb" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_sub_title"
                        android:text="@string/increment_exit_type" />

                    <TextView
                        android:id="@+id/active_exit_type"
                        style="@style/list_sub_title"
                        android:layout_below="@+id/active_content"
                        android:layout_marginBottom="@dimen/y33"
                        android:text="cccccc" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_sub_title"
                        android:text="@string/increment_inspect_time" />

                    <TextView
                        android:id="@+id/active_inspect_time"
                        style="@style/list_sub_title"
                        android:layout_below="@+id/active_content"
                        android:layout_marginBottom="@dimen/y33"
                        android:text="cccccc" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_sub_title"
                        android:text="@string/increment_inspect_unit" />

                    <TextView
                        android:id="@+id/active_inspect_unit"
                        style="@style/list_sub_title"
                        android:layout_below="@+id/active_content"
                        android:layout_marginBottom="@dimen/y33"
                        android:text="cccccc" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_active_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y22"
                android:layout_marginRight="@dimen/x31"
                android:layout_marginTop="@dimen/y470">

                <TextView
                    android:id="@+id/active_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="进行中"
                    android:textColor="#e40b0b"
                    android:textSize="@dimen/x26" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/ve_line2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/rl_content"
            android:background="#dddddd" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ve_line2"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginLeft="@dimen/x29"
                android:layout_marginTop="@dimen/x24"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/list_sub_bottom"
                    android:text="@string/increment_total_money" />

                <TextView
                    style="@style/list_sub_bottom"
                    android:text="50.00" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
