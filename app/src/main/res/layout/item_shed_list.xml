<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_house_bg"
    android:clickable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_active_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y300"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginRight="@dimen/x4"
            android:layout_marginTop="@dimen/y4"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/active_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corners_img_bg"
                android:scaleType="center"
                android:src="@drawable/green_default_img" />


        </LinearLayout>

        <View
            android:id="@+id/ve_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/ll_active_img"
            android:background="#dddddd" />

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ve_line">


            <LinearLayout
                android:id="@+id/ll_active_tag"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y36"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/green">

                <TextView
                    android:id="@+id/active_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:gravity="center"
                    android:text="进行中"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/y24"
                android:layout_toRightOf="@+id/ll_active_tag"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/active_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y18"
                    android:maxEms="18"
                    android:singleLine="true"
                    android:text="aaaaaaa"
                    android:textColor="#404040"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/active_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/active_title"
                    android:layout_marginBottom="@dimen/y24"
                    android:text="bbbb"
                    android:textColor="#e2900e"
                    android:textSize="@dimen/x20" />

                <TextView
                    android:id="@+id/active_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/active_content"
                    android:layout_marginBottom="@dimen/y24"
                    android:text="cccccc"
                    android:textColor="#e2900e"
                    android:textSize="@dimen/x20" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/ve_line2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/rl_content"
            android:background="#dddddd" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ve_line2"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/x15"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x15"
                    android:src="@drawable/delete_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x35"
                    android:text="@string/iv_delete" />

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x15"
                    android:src="@drawable/edit_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x35"
                    android:text="@string/green_edit" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x15"
                    android:src="@drawable/submit_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/green_submit" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
