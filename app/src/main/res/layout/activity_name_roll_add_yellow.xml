<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/main_toop"
        layout="@layout/toolbar_other" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#b2b2b2" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:fillViewport="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:orientation="vertical">

            <TextView
                style="@style/title_bg"
                android:text="@string/green_car_info" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout style="@style/electron_outer_linearLayout">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/green_car_num" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_car_num"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />

                    </LinearLayout>


                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/name_roll_color" />

                    <RelativeLayout
                        android:id="@+id/rl_car_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_car_color"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/name_roll_factory" />

                    <LinearLayout
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_mobile"
                            style="@style/electron_ed_content"
                            android:hint="@string/please_input" />

                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/name_roll_car_color" />

                    <RelativeLayout
                        android:id="@+id/rl_car_body_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_car_body_color"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />


                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/name_roll_car_type" />

                    <RelativeLayout
                        android:id="@+id/rl_car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_car_type"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />


                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/electron_tv_title"
                        android:text="@string/name_roll_carx_type" />

                    <RelativeLayout
                        android:id="@+id/rl_veh_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            style="@style/electron_linearLayout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_veh_type"
                                style="@style/electron_ed_content" />

                        </LinearLayout>

                        <ImageView
                            style="@style/electron_ed_image"
                            android:src="@drawable/right_btn" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/view_line" />

                <RelativeLayout
                    style="@style/electron_outer_linearLayout"
                    android:layout_height="@dimen/y200"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/electron_tv_title"
                        android:text="@string/name_roll_qingkuang" />

                    <LinearLayout
                        android:id="@+id/ll_member_address"
                        style="@style/electron_linearLayout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_remark"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y200"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:hint="@string/please_input"
                            android:textSize="@dimen/x28" />

                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/view_line" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginTop="@dimen/y10"
                android:orientation="vertical">

                <TextView
                    style="@style/title_bg"
                    android:text="@string/green_photo" />

                <cn.wtkj.charge_inspect.views.custom.MyPhotos
                    android:id="@+id/myphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:padding="5dp"></cn.wtkj.charge_inspect.views.custom.MyPhotos>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y20"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comit_button"
                    style="@style/button_layout"
                    android:background="@drawable/selector_psersoal_bt_bg"
                    android:text="提交"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
