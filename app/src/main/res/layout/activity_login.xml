<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y172"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y37"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/x48" />

    <FrameLayout
        android:id="@+id/login_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y114"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="@dimen/x574"
                android:layout_height="@dimen/y87"
                android:background="@drawable/corners_login">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x36"
                    android:src="@drawable/user_img" />

                <EditText
                    android:id="@+id/et_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x36"
                    android:layout_toRightOf="@+id/iv_user"
                    android:hint="@string/login_user" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/x574"
                android:layout_height="@dimen/y87"
                android:layout_marginTop="@dimen/y48"
                android:background="@drawable/corners_login">

                <ImageView
                    android:id="@+id/iv_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x36"
                    android:src="@drawable/paw_img" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x36"
                    android:layout_toRightOf="@+id/iv_pwd"
                    android:hint="@string/login_pwd" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/x574"
                android:layout_height="@dimen/y87"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/login_psersoal_bt_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_comit_bnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x38" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y65">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"

                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y22"
                        android:text="@string/login_copyright"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_copyright2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
