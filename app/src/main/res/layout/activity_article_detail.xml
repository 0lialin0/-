<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/main_toop"
        layout="@layout/toolbar_other" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/x46"
            android:layout_marginRight="@dimen/x55"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y38"
                android:layout_marginBottom="@dimen/y27"
                android:textColor="#505050"
                android:textSize="@dimen/x30"
                android:text=""/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/addTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bababa"
                    android:textSize="@dimen/x30"
                    android:text=""/>
                <TextView
                    android:id="@+id/checkAttachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x50"
                    android:textColor="@color/custom_blue"
                    android:textSize="@dimen/x30"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:visibility="gone"
                    android:text="查看附件"/>
            </LinearLayout>
            <TextView
                android:id="@+id/htmlText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y31"
                android:text=""/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
